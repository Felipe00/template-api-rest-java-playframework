# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.EmployeeController.index()

# Routes API Rest
GET     /employees                  controllers.EmployeeController.list(page: Integer ?= 1)
GET     /employees/$id<[0-9]+>      controllers.EmployeeController.get(id: Long)
POST    /employees                  controllers.EmployeeController.create()
PUT     /employees                  controllers.EmployeeController.update()
PATCH   /employees                  controllers.EmployeeController.update()
DELETE  /employees/$id<[0-9]+>      controllers.EmployeeController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
